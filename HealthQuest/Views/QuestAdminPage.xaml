<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthQuest.Views.QuestAdminPage"
             Title="Quest Admin">
    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Page Title -->
        <Label Text="Quest Admin"
               FontSize="30"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="MediumPurple" />

        <!-- Name -->
        <Label Text="Quest Name"
               FontSize="20"
               FontAttributes="Bold" />
        <Entry Placeholder="Enter quest name"
               x:Name="Name"
               FontSize="18" />

        <!-- Description -->
        <Label Text="Description"
               FontSize="20"
               FontAttributes="Bold" />
        <Editor Placeholder="Enter quest description"
                x:Name="Description"
                FontSize="18"
                AutoSize="TextChanges" />

        <!-- Reps -->
        <Label Text="Reps"
               FontSize="20"
               FontAttributes="Bold" />
        <Label x:Name="RepsLabel"
               FontSize="18" />
        <Stepper x:Name="RepsStepper"
                 Minimum="0"
                 Maximum="100"
                 Increment="1"
                 ValueChanged="OnRepsStepperValueChanged" />

        <!-- Reps Done -->
        <Label Text="Reps Completed"
               FontSize="20"
               FontAttributes="Bold" />
        <Label x:Name="RepsDoneLabel"
               FontSize="18" />
        <Stepper x:Name="RepsDoneStepper"
                 Minimum="0"
                 Maximum="100"
                 Increment="1"
                 ValueChanged="OnRepsDoneStepperValueChanged" />

        <!-- Stat -->
        <Label Text="Stat"
               FontSize="20"
               FontAttributes="Bold" />
        <Picker x:Name="StatPicker"
                FontSize="18">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Stamina</x:String>
                    <x:String>Strength</x:String>
                    <x:String>Agility</x:String>
                    <x:String>Vigor</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <!-- Action Button -->
        <Button Text="Create Quest"
                BackgroundColor="DodgerBlue"
                TextColor="White"
                CornerRadius="10"
                x:Name="SaveButton"
                FontSize="20"
                Clicked="OnClickedSaveButton" />
    </VerticalStackLayout>
</ContentPage>